<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6E9EFF"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_extrabold"
        android:text="Fantasy QFL"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

    <Button
        android:id="@+id/mlog"
        android:layout_width="203dp"
        android:layout_height="58dp"
        android:layout_marginTop="98dp"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/mreg"
        android:layout_width="203dp"
        android:layout_height="58dp"
        android:layout_marginTop="104dp"
        android:text="REGISTRATION"
        app:layout_constraintEnd_toEndOf="@+id/mlog"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mlog"
        app:layout_constraintTop_toBottomOf="@+id/mlog" />

    <Button
        android:id="@+id/mexit"
        android:layout_width="203dp"
        android:layout_height="58dp"
        android:layout_marginTop="108dp"
        android:text="EXIT"
        app:layout_constraintEnd_toEndOf="@+id/mreg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mreg"
        app:layout_constraintTop_toBottomOf="@+id/mreg" />
</androidx.constraintlayout.widget.ConstraintLayout>